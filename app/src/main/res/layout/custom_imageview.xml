<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hbjia="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.hbjia.customview.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        hbjia:image="@drawable/liaotian"
        hbjia:imageScaleType="center"
        hbjia:titleText="hello android!"
        hbjia:titleTextSize="40sp"
        hbjia:titleTextColor="#ff00ff"/>

    <com.example.hbjia.customview.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        hbjia:image="@drawable/ic_launcher"
        hbjia:imageScaleType="center"
        hbjia:titleText="hello android!"
        hbjia:titleTextSize="10sp"
        hbjia:titleTextColor="#ff00ff"/>

    <com.example.hbjia.customview.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        hbjia:image="@drawable/w03"
        hbjia:imageScaleType="center"
        hbjia:titleText="hello android!"
        hbjia:titleTextSize="20sp"
        hbjia:titleTextColor="#ff00ff"/>

</LinearLayout>